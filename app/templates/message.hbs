<h2>{{model.question}}</h2>

 {{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="question">Question</label>
      {{input id="question" class="form-control" value=question}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea id="description" class="form-control" rows="15" value=description}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>

 {{else}}
  <h3><p>{{model.question}}</p></h3>
  <p>
    {{model.description}}
  </p>
<button class="btn btn-primary" {{action 'edit'}}> Edit</button>
<button class="btn btn-danger" {{action 'delete'}}> Delete</button>
{{/if}}

